configuration {
    modi: "drun";
    font: "Iosevka Mayukai Monolite Bold 11";
    location: 0;
	fixed-num-lines: true;
	window-match-fields: "name";
    display-run: "Command";
    display-drun: "Apps";
    display-filebrowser: "File";
    sidebar-mode: false;
    timeout {
        action: "kb-cancel";
        delay:  0;
    }
    filebrowser {
        directories-first: true;
        sorting-method:    "name";
    }
}
@theme "main"
